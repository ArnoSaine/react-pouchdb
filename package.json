{
  "name": "react-pouchdb",
  "version": "1.0.0-alpha.0",
  "description": "React wrapper for PouchDB that also subscribes to changes.",
  "main": "cjs",
  "module": "es",
  "scripts": {
    "build": "npm run inbuild --",
    "build:todoapp": "npx babel src --out-dir todoapp/node_modules/react-pouchdb/browser/es --ignore src/__tests__",
    "deploy": "cd todoapp && npm run build && cd .. && gh-pages --dist todoapp/build",
    "dev": "npm test -- --watchAll",
    "dev:todoapp": "concurrently \"npm run watch\" \"npm link && cd todoapp && npm link react-pouchdb && npm start\"",
    "eslint": "eslint {{.,todoapp},{scripts,src,todoapp/src}/**}/*.js --fix",
    "inbuild": "node --experimental-modules scripts/build --source-maps --ignore src/__tests__",
    "lint": "npm run eslint && npm run prettier",
    "postbuild": "npm run update-submodules",
    "postpublish": "cd todoapp && npm install react-pouchdb@latest --save",
    "prebuild": "rimraf browser cjs es node",
    "prepack": "npm run build",
    "prettier": "npm run prettier:write -- {{.,todoapp},{scripts,src,todoapp/src}/**}/*.{js,json} !./package-lock.json",
    "prettier:write": "prettier --config .prettierrc.js --write",
    "preversion": "npm run lint && npm test",
    "test": "jest --coverage --runInBand --verbose",
    "update-submodules": "node --experimental-modules scripts/update-submodules",
    "version": "npm run update-submodules --",
    "watch": "npm run build && concurrently \"npm run inbuild -- --watch --skip-initial-build\" \"npm run update-submodules\""
  },
  "keywords": ["react", "pouchdb", "couchdb"],
  "repository": {
    "type": "git",
    "url": "https://github.com/ArnoSaine/react-pouchdb.git"
  },
  "license": "ISC",
  "author": {
    "name": "Arno Saine",
    "email": "arno@mowhi.com"
  },
  "files": ["browser", "cjs", "es", "node"],
  "peerDependencies": {
    "react": "^16.7 || 17"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.5",
    "fast-json-stable-stringify": "^2.0.0",
    "hoist-non-react-statics": "^3.2.0",
    "lodash": "^4.17.11",
    "pouchdb-collate": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "pouchdb-selector-core": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "concurrently": "^4.1.0",
    "cross-spawn": "^6.0.5",
    "fs-extra": "^7.0.1",
    "gh-pages": "^2.0.1",
    "jest": "^23.6.0",
    "library-util": "^0.2.0",
    "pouchdb": "^7.0.0",
    "pouchdb-browser": "^7.0.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-test-renderer": "^16.6.3",
    "yargs": "^12.0.5"
  },
  "jest": {
    "testMatch": ["**/src/**/__tests__/**/*.js"],
    "testPathIgnorePatterns": ["/utils/.*\\.js"],
    "transform": {
      ".js$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "npm run prettier:write", "git add"],
    "*.{css,json,md}": ["npm run prettier:write", "git add"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
