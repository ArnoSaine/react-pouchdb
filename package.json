{
  "name": "react-pouchdb",
  "version": "2.1.0",
  "description": "React wrapper for PouchDB that also subscribes to changes.",
  "keywords": [
    "react",
    "pouchdb",
    "couchdb"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ArnoSaine/react-pouchdb.git"
  },
  "license": "ISC",
  "author": {
    "name": "Arno Saine",
    "email": "arno@mowhi.com"
  },
  "type": "module",
  "exports": {
    ".": "./mjs/main.js",
    "./concurrent": "./mjs/concurrent/main.js",
    "./loading-state": "./mjs/loading-state/main.js",
    "./browser": "./mjs/browser/main.js",
    "./browser/concurrent": "./mjs/browser/concurrent/main.js",
    "./browser/loading-state": "./mjs/browser/loading-state/main.js",
    "./node": "./mjs/node/main.js",
    "./node/concurrent": "./mjs/node/concurrent/main.js",
    "./node/loading-state": "./mjs/node/loading-state/main.js",
    "./create": "./mjs/create.js",
    "./loading-state/create": "./mjs/loading-state/create.js"
  },
  "main": "./cjs/main.js",
  "module": "./mjs/main.js",
  "files": [
    "browser",
    "cjs",
    "concurrent",
    "loading-state",
    "mjs",
    "node"
  ],
  "scripts": {
    "build": "npm-run-all build:*",
    "build:app": "react-scripts build",
    "build:lib": "npm-run-all build:lib-*",
    "postbuild:lib": "npm run update-packages",
    "build:lib-cjs": "library-scripts build --type cjs --out-dir cjs",
    "build:lib-mjs": "library-scripts build --type mjs --out-dir mjs",
    "deploy": "cd todoapp && npm run build && cd .. && gh-pages --dist todoapp/build",
    "dev:todoapp": "concurrently \"npm run watch:lib-mjs\" \"cd todoapp && npm link ../ && npm start\"",
    "prepare": "npm run build:lib",
    "prepublishOnly": "npm run build:lib && cross-env CI=true npm run testOnly",
    "postpublish": "cd todoapp && npm install react-pouchdb@latest",
    "start": "concurrently \"npm run watch:lib-mjs\" \"react-scripts start\"",
    "startOnly": "react-scripts start",
    "test": "concurrently \"npm run watch:lib-mjs\" \"react-scripts test\"",
    "testOnly": "react-scripts test",
    "update-packages": "node scripts/update-packages",
    "watch": "concurrently \"npm:watch:*\"",
    "watch:lib-cjs": "library-scripts watch --type cjs --out-dir cjs",
    "watch:lib-mjs": "library-scripts watch --type mjs --out-dir mjs"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@postinumero/map-get-with-default": "^0.1.2",
    "@postinumero/use-async": "^0.1.2",
    "@repeaterjs/repeater": "^3.0.4",
    "fast-json-stable-stringify": "^2.1.0",
    "hoist-non-react-statics": "^3.3.2",
    "lodash": "^4.17.20",
    "memoizee": "^0.4.14",
    "pouchdb-collate": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-selector-core": "^7.2.2"
  },
  "devDependencies": {
    "@arnosaine/react-scripts": "^4.0.0-4",
    "@postinumero/library-scripts": "^0.1.3",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "babel-plugin-codegen": "^4.0.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "pouchdb": "^7.2.2",
    "pouchdb-browser": "^7.2.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "peerDependencies": {
    "react": "^16.8 || 17"
  }
}
